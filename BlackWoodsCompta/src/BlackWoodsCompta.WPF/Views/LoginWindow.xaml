<Window x:Class="BlackWoodsCompta.WPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BlackWoods Compta - Connexion" 
        Height="550" Width="500"
        MinHeight="500" MinWidth="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#673AB7" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸ¢" FontSize="48" HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock Text="BlackWoods Restaurant" 
                          FontSize="24" 
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="SystÃ¨me de ComptabilitÃ©" 
                          FontSize="14" 
                          Foreground="White"
                          Opacity="0.9"
                          HorizontalAlignment="Center"
                          Margin="0,5,0,10"/>
            </StackPanel>
        </Border>

        <!-- Login Form -->
        <StackPanel Grid.Row="1" Margin="40,30" VerticalAlignment="Center">
            <TextBlock Text="Connexion" 
                      FontSize="20" 
                      FontWeight="SemiBold"
                      Foreground="White"
                      Margin="0,0,0,30"
                      HorizontalAlignment="Center"/>

            <!-- Username -->
            <TextBlock Text="Nom d'utilisateur" FontSize="12" Foreground="White" Margin="0,0,0,5"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                    Margin="0,0,0,20"
                    FontSize="14"
                    Padding="8"
                    Background="#2D2D30"
                    Foreground="White"
                    BorderBrush="#555"
                    BorderThickness="1"/>

            <!-- Password -->
            <TextBlock Text="Mot de passe" FontSize="12" Foreground="White" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox"
                        Margin="0,0,0,10"
                        FontSize="14"
                        Padding="8"
                        Background="#2D2D30"
                        Foreground="White"
                        BorderBrush="#555"
                        BorderThickness="1"
                        PasswordChanged="PasswordBox_PasswordChanged"/>

            <!-- Error Message -->
            <TextBlock Text="{Binding ErrorMessage}"
                      Foreground="#FF6B6B"
                      TextWrapping="Wrap"
                      Margin="0,10,0,20"
                      HorizontalAlignment="Center"
                      Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

            <!-- Login Button -->
            <Button Content="SE CONNECTER"
                   Command="{Binding LoginCommand}"
                   IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBooleanConverter}}"
                   Height="45"
                   FontSize="14"
                   FontWeight="Bold"
                   Margin="0,10,0,0"
                   Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#673AB7"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                           CornerRadius="4"
                                           BorderThickness="0">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7C4DFF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#555"/>
                                <Setter Property="Foreground" Value="#999"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <!-- Loading Indicator -->
            <ProgressBar IsIndeterminate="True"
                        Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                        Margin="0,20,0,0"
                        Foreground="#673AB7"/>

            <!-- Footer -->
            <TextBlock Text="Version 1.0.0"
                      FontSize="10"
                      Foreground="#888"
                      HorizontalAlignment="Center"
                      Margin="0,40,0,0"/>
        </StackPanel>
    </Grid>
</Window>
