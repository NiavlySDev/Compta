<UserControl x:Class="BlackWoodsCompta.WPF.Views.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBlock Text="ðŸ“¦" FontSize="36" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Gestion des Commandes" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="GÃ©rer les commandes fournisseurs et suivre les livraisons" FontSize="14" Foreground="#AAAAAA"/>
            </StackPanel>
        </StackPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="0,0,20,0">
                
                <!-- Create Order Section -->
                <Border Background="#2D2D2D" BorderBrush="#673AB7" BorderThickness="2" CornerRadius="10" Padding="25" Margin="0,0,0,25">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                            <TextBlock Text="ðŸ†•" FontSize="20" Margin="0,0,8,0"/>
                            <TextBlock Text="CrÃ©er Nouvelle Commande" FontSize="20" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Order Information Card -->
                            <Border Grid.Column="0" Background="#3D3D3D" CornerRadius="8" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="ðŸ“‹ Informations Commande" FontSize="16" FontWeight="SemiBold" Foreground="#673AB7" Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="Fournisseur" Foreground="White" FontWeight="Medium" Margin="0,0,0,5"/>
                                    <ComboBox Name="SupplierComboBox" Background="#4D4D4D" Foreground="White" 
                                              BorderBrush="#673AB7" BorderThickness="1" Padding="12,8" FontSize="14" Margin="0,0,0,15"
                                              ItemsSource="{Binding Suppliers}" DisplayMemberPath="Name" SelectedValuePath="Id"
                                              SelectedValue="{Binding SelectedSupplierId}"/>
                                    
                                    <TextBlock Text="Date de Livraison PrÃ©vue" Foreground="White" FontWeight="Medium" Margin="0,0,0,5"/>
                                    <DatePicker Name="DeliveryDatePicker" Background="#4D4D4D" Foreground="White"
                                                BorderBrush="#673AB7" BorderThickness="1" Padding="12,8" FontSize="14" Margin="0,0,0,15"
                                                SelectedDate="{Binding ExpectedDeliveryDate}"/>
                                    
                                    <TextBlock Text="Notes Commande (Optionnel)" Foreground="White" FontWeight="Medium" Margin="0,0,0,5"/>
                                    <TextBox Name="OrderNotesTextBox" Background="#4D4D4D" Foreground="White"
                                             BorderBrush="#673AB7" BorderThickness="1" Padding="12,8" FontSize="14" MinHeight="60"
                                             TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                             Text="{Binding OrderNotes}"/>
                                </StackPanel>
                            </Border>

                            <!-- Order Items Card -->
                            <Border Grid.Column="2" Background="#3D3D3D" CornerRadius="8" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="ðŸ›ï¸ Articles Commande" FontSize="16" FontWeight="SemiBold" Foreground="#673AB7" Margin="0,0,0,15"/>
                                    
                                    <TextBlock Text="Description Produit/Article" Foreground="White" FontWeight="Medium" Margin="0,0,0,5"/>
                                    <TextBox Name="ProductNameTextBox" Background="#4D4D4D" Foreground="White"
                                             BorderBrush="#673AB7" BorderThickness="1" Padding="12,8" FontSize="14" Margin="0,0,0,15"
                                             Text="{Binding ProductName}"/>
                                    
                                    <Grid Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="QuantitÃ©" Foreground="White" FontWeight="Medium" Margin="0,0,0,5"/>
                                            <TextBox Name="QuantityTextBox" Background="#4D4D4D" Foreground="White"
                                                     BorderBrush="#673AB7" BorderThickness="1" Padding="12,8" FontSize="14"
                                                     Text="{Binding Quantity}"/>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Prix Unitaire (â‚¬)" Foreground="White" FontWeight="Medium" Margin="0,0,0,5"/>
                                            <TextBox Name="UnitPriceTextBox" Background="#4D4D4D" Foreground="White"
                                                     BorderBrush="#673AB7" BorderThickness="1" Padding="12,8" FontSize="14"
                                                     Text="{Binding UnitPrice}"/>
                                        </StackPanel>
                                    </Grid>

                                    <Button Name="AddItemButton" Content="âž• Ajouter Article Ã  la Commande"
                                            Background="#673AB7" Foreground="White" BorderThickness="0" 
                                            Padding="15,10" FontSize="14" FontWeight="Medium"
                                            Margin="0,0,0,15" Cursor="Hand" Command="{Binding AddOrderItemCommand}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <!-- Order Total and Actions -->
                        <Border Background="#252525" CornerRadius="8" Padding="20" Margin="0,20,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding OrderItemsCount, StringFormat='Articles dans la commande: {0}'}" 
                                               Foreground="#AAAAAA" FontSize="14" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding OrderTotal, StringFormat='Total: {0:F2}â‚¬'}" 
                                               Foreground="White" FontSize="18" FontWeight="Bold"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="ðŸ—‘ï¸ Vider Commande" Background="#D32F2F" Foreground="White" BorderThickness="0"
                                            Padding="15,12" FontSize="14" FontWeight="Medium" Margin="0,0,10,0"
                                            Command="{Binding ClearOrderCommand}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                    <Button Content="ðŸ’¾ CrÃ©er Commande" Background="#388E3C" Foreground="White" BorderThickness="0"
                                            Padding="20,12" FontSize="16" FontWeight="Bold"
                                            Command="{Binding CreateOrderCommand}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Button.Template>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Current Order Items -->
                <Border Background="#2D2D2D" BorderBrush="#444" BorderThickness="1" CornerRadius="10" Padding="25" Margin="0,0,0,25"
                        Visibility="{Binding HasOrderItems, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“‹" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Articles Commande Actuelle" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <DataGrid ItemsSource="{Binding CurrentOrderItems}" AutoGenerateColumns="False"
                                  Background="#3D3D3D" Foreground="White" BorderThickness="0"
                                  GridLinesVisibility="None" HeadersVisibility="Column"
                                  CanUserAddRows="False" CanUserDeleteRows="True" IsReadOnly="False">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#673AB7"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#3D3D3D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4D4D4D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Produit" Binding="{Binding ProductName}" Width="2*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="QuantitÃ©" Binding="{Binding Quantity}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Prix Unitaire" Binding="{Binding UnitPrice, StringFormat=C}" Width="*" IsReadOnly="True"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="*" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

                <!-- Recent Orders -->
                <Border Background="#2D2D2D" BorderBrush="#444" BorderThickness="1" CornerRadius="10" Padding="25">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                            <TextBlock Text="ðŸ“œ" FontSize="18" Margin="0,0,8,0"/>
                            <TextBlock Text="Commandes RÃ©centes" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <DataGrid ItemsSource="{Binding Orders}" AutoGenerateColumns="False"
                                  Background="#3D3D3D" Foreground="White" BorderThickness="0"
                                  GridLinesVisibility="None" HeadersVisibility="Column"
                                  CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                            <DataGrid.ColumnHeaderStyle>
                                <Style TargetType="DataGridColumnHeader">
                                    <Setter Property="Background" Value="#673AB7"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Padding" Value="12,8"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                </Style>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="DataGridRow">
                                    <Setter Property="Background" Value="#3D3D3D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#4D4D4D"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.CellStyle>
                                <Style TargetType="DataGridCell">
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="8"/>
                                </Style>
                            </DataGrid.CellStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="NÂ° Commande" Binding="{Binding Id}" Width="80"/>
                                <DataGridTextColumn Header="Fournisseur" Binding="{Binding SupplierName}" Width="*"/>
                                <DataGridTextColumn Header="Date Commande" Binding="{Binding OrderDate, StringFormat=dd/MM/yyyy}" Width="120"/>
                                <DataGridTextColumn Header="Livraison PrÃ©vue" Binding="{Binding ExpectedDeliveryDate, StringFormat=dd/MM/yyyy}" Width="140"/>
                                <DataGridTextColumn Header="Total" Binding="{Binding TotalAmount, StringFormat=C}" Width="100"/>
                                <DataGridTextColumn Header="Statut" Binding="{Binding Status}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>