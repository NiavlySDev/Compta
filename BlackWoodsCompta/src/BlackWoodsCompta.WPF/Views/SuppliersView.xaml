<UserControl x:Class="BlackWoodsCompta.WPF.Views.SuppliersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodels="clr-namespace:BlackWoodsCompta.WPF.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:SuppliersViewModel}"
             mc:Ignorable="d"
             Background="#1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" 
                   Text="Gestion des Fournisseurs" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   Margin="16"/>

        <!-- Filters and Controls -->
        <Border Grid.Row="1" 
                Background="#2D2D2D" 
                CornerRadius="8" 
                Margin="16,0,16,16" 
                Padding="16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search and Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ” Rechercher:" Foreground="White" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Width="300" 
                             Height="35"
                             Background="#2D2D2D"
                             Foreground="White"
                             BorderBrush="#673AB7"
                             Padding="8"
                             VerticalContentAlignment="Center"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" 
                           Orientation="Horizontal" 
                           VerticalAlignment="Center" 
                           Margin="16,0">
                    <Button Content="âž• Ajouter" 
                            Command="{Binding AddSupplierCommand}" 
                            Background="#673AB7"
                            Foreground="White"
                            Padding="12,8"
                            Margin="4"
                            Width="100"/>
                    <Button Content="âœï¸ Modifier" 
                            Command="{Binding EditSupplierCommand}" 
                            Background="#673AB7"
                            Foreground="White"
                            Padding="12,8"
                            Margin="4"
                            Width="100"/>
                    <Button Content="ðŸ”„ Actualiser" 
                            Command="{Binding RefreshCommand}" 
                            Background="#4CAF50"
                            Foreground="White"
                            Padding="12,8"
                            Margin="4"
                            Width="100"/>
                </StackPanel>

                <!-- Loading Indicator -->
                <StackPanel Grid.Column="2" 
                           VerticalAlignment="Center" 
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar IsIndeterminate="True" Width="100" Height="20"/>
                    <TextBlock Text="Chargement..." Foreground="White" HorizontalAlignment="Center" Margin="0,4,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Modern Suppliers Cards -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="16,0,16,16">
            <ItemsControl ItemsSource="{Binding Suppliers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#2D2D2D" CornerRadius="15" Margin="10" Padding="25" Width="380" Height="320"
                                BorderBrush="#673AB7" BorderThickness="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- Supplier Header -->
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                                    <Border Background="#673AB7" CornerRadius="30" Width="60" Height="60" Margin="0,0,15,0">
                                        <TextBlock Text="ðŸª" FontSize="28" HorizontalAlignment="Center" 
                                                   VerticalAlignment="Center" Foreground="White"/>
                                    </Border>
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" FontSize="18" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding ContactPerson}" FontSize="14" Foreground="#673AB7" FontWeight="SemiBold"/>
                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- ID Badge -->
                                <Border Grid.Row="1" Background="#4CAF50" CornerRadius="8" Padding="12,6" 
                                        HorizontalAlignment="Left" Margin="0,0,0,15">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="ðŸ†”" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="ID: " FontSize="14" FontWeight="Bold" Foreground="White"/>
                                        <TextBlock Text="{Binding Id}" FontSize="14" FontWeight="Bold" Foreground="White"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- Contact Details -->
                                <StackPanel Grid.Row="2">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ“ž" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="TÃ©lÃ©phone:" FontSize="14" Foreground="#AAAAAA" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Phone}" FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ“§" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="Email:" FontSize="14" Foreground="#AAAAAA" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Email}" FontSize="14" Foreground="White" TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,8,0"/>
                                        <TextBlock Text="Adresse:" FontSize="14" Foreground="#AAAAAA" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Address}" FontSize="14" Foreground="White" TextWrapping="Wrap" MaxWidth="250"/>
                                    </StackPanel>
                                    
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8\">\n                                        <TextBlock Text=\"ðŸ“\" FontSize=\"14\" Margin=\"0,0,8,0\"/>\n                                        <TextBlock Text=\"Notes:\" FontSize=\"14\" Foreground=\"#AAAAAA\" Margin=\"0,0,8,0\"/>\n                                        <TextBlock Text=\"{Binding Notes}\" FontSize=\"14\" Foreground=\"#FF9800\" TextWrapping=\"Wrap\" MaxWidth=\"250\"/>\n                                    </StackPanel>
                                </StackPanel>
                                
                                <!-- Actions -->
                                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                                    <Button Content="âœï¸ Modifier" Command="{Binding DataContext.EditSupplierCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"
                                            Background="#673AB7" Foreground="White" 
                                            BorderThickness="0" Padding="12,8" Margin="0,0,8,0"/>
                                    <Button Content="ðŸ—‘ï¸ Supprimer" 
                                            Background="#D32F2F" Foreground="White" 
                                            BorderThickness="0" Padding="12,8"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>