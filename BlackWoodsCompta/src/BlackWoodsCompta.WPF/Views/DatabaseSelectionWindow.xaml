                <!-- Local Database Option -->
                <Border Background="#2D2D30" BorderBrush="#673AB7" BorderThickness="2" 
                        CornerRadius="4" Margin="0,0,0,20" Padding="20"
                        MouseLeftButtonDown="LocalDatabase_Click" Cursor="Hand">
                    <StackPanel>
                        <RadioButton IsChecked="{Binding UseLocalDatabase}"
                                    GroupName="DatabaseMode"
                                    FontSize="16"
                                    FontWeight="SemiBold"
                                    Foreground="White"
                                    Margin="0,0,0,10">
                            <StackPanel Orientation="Horizontal">
