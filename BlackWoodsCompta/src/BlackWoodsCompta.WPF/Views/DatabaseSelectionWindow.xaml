<Window x:Class="BlackWoodsCompta.WPF.Views.DatabaseSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BlackWoods Compta - Choix de la base de donnÃ©es" 
        Height="600" Width="700"
        MinHeight="500" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Background="#1E1E1E">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#673AB7" Padding="20">
            <StackPanel>
                <TextBlock Text="ðŸ¢" FontSize="48" HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock Text="BlackWoods Restaurant" 
