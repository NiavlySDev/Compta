        </Border>

        <!-- Selection Options -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,30">
                <TextBlock Text="Choisissez le mode de fonctionnement :" 
                          FontSize="16" 
